.popover-widgets{
  & .popover{
    width 100%;
    height 100%;
    position fixed;
    top 0;
    left 0
    z-index 100;
    background-color rgba(53,53,53,.4);
    & .popover-container{
      position absolute;
      left 50%;
      top 50%;
      width 450px;
      margin 0 auto;
      background-color $color-white;
      margin-left -225px;
      b-transform translateY(-50%);
      padding-bottom 32px;
      b-box-shadow(0 0 16px 0 rgba(197, 197, 197, .5));
      & .popover-close{
        position absolute;
        width 14px;
        height 14px;
        right 32px;
        top 17px;
        background-image url("img/popover-close.png");
        background-size 14px;
        background-position center;
        background-repeat no-repeat;
        cursor pointer;
      }
      & .popover-title{
        color $color-65;
        font-size 14px;
        padding 17px 46px;
        border-bottom 1px solid $color-F1;
      }
      & .popover-content{
        padding 20px 32px 48px;
      }
      & .btn-group{
        text-align center;
        & .btn-line{
          margin-right 16px;
        }
      }
    }
  }
  & .popover-msg{
    & .popover-container{
      height 240px;
      & .popover-title{
        background-image url("img/popover-msg-icon.png");
        background-size 32px;
        background-repeat no-repeat;
        background-position 48px 48px;
        padding 48px 48px 16px 95px;
        line-height 32px;
        border none;
        font-size 18px;
      }
      & .popover-content{
        padding 16px 48px 32px 96px;
        font-size 12px;
        color $color-95;
      }
    }
  }
}