.dropdown-widgets {
  margin 20px;
  height 300px;
  & .dropdown {
    position relative;
    display inline-block;
    width 196px;
    line-height 32px;
    & .dropdown-btn {
      position absolute;
      line-height 30px;
      z-index 2;
      width 100%;
      padding-left 12px;
      font-size 12px;
      border 1px solid $color-E1;
      background-color $color-white;
      b-box-sizing(border-box);
      background-image url("img/dropdown-down.png")
      background-repeat no-repeat;
      background-position 177px center;
      background-size 7px;
      & span {
        color $color-C5;
      }
      & .active {
        color $color-65;
      }
    }
    & .dropdown-menu {
      display none;
      position absolute;
      z-index 1;
      top 32px;
      width 100%;
      padding 12px 0;
      b-box-shadow(0 0 16px 0 rgba(197, 197, 197, .5));
      & ul {
        & li {
          color $color-95;
          font-size 12px;
          padding 0 12px;
          cursor pointer;
          &:hover {
            color $color-base;
            background-color $color-F5;
          }
        }
        & .active {
          color $color-base;
          background-color $color-F5;
        }
      }
    }
  }
  & .dropdown-lg {
    width 240px;
    line-height 40px;
    & .dropdown-btn {
      line-height 38px;
      background-position 217px center;
      padding-left 16px;
    }
    & .dropdown-menu {
      top 40px;
      & ul li {
        padding 0 16px;
      }
    }
  }
  & .dropdown-sm {
    width 152px;
    line-height 24px;
    & .dropdown-btn {
      line-height 22px;
      background-position 137px center;
    }
    & .dropdown-menu {
      top 24px;
    }
  }
  & .dropdown-open {
    & .dropdown-btn {
      background-image url("img/dropdown-up.png")
      border-color $color-base;
    }
    & .dropdown-menu {
      display block;
    }
  }
}
