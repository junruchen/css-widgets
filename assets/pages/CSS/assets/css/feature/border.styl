@import "../base/reset.styl"; //重置
@import "../base/methods.styl"; //方法

@import "../base/color.styl"; //颜色
$color1 = #fb3
$color2 = #58a
.container {
  width 960px;
  margin 0 auto;
  padding-top 50px;
}

.border-box {
  width 200px;
  height 200px;
  float left;

  background $color-white;
  b-box-sizing(border-box);
  text-shadow 0px 0px 5px #fff;
  color $color-35;
  margin 40px;
  font-size 16px;
  text-align center;
}

.border-box1 {
  width 100px;
  height 50px;
  float left;

  background $color2;
  b-box-sizing(border-box);
  text-shadow 0px 0px 5px #fff;
  color $color-35;
  margin 40px;
  font-size 16px;
  line-height 50px;
  text-align center;
}

.b-1 {
  border 10px solid hsla(0, 0%, 100%, .5);
  background $color1;
  //background-clip padding-box;
}

.b-2 {
  border 10px solid $color1;
  box-shadow 0 0 0 10px $color2;
}

.b-3 {
  border-radius 5px
  box-shadow 0 0 0 10px $color2, 0 0 0 20px $color1, 0 0 0 30px $color2;
}

.b-4 {
  outline 10px solid $color2;
}

.b-5 {
  border-radius 10px;
  border 10px solid $color1;
  outline 10px solid $color2;
}

.b-6 {
  background-color $color1;
  border-radius 50%;
}

.b-7 {
  height 100px;
  background-color $color1;
  border-radius 50% / 50%;
}

.b-8 {
  background-color $color1;
  border-radius: 50% / 100% 100% 0 0;
}

.b-9 {
  background-color $color1;
  border-top-left-radius 100% 50%;
  border-bottom-left-radius 100% 50%;
  border-top-right-radius 0 50%;
  border-bottom-right-radius 0 50%;
}

.b-10 {
  text-align left;
  background-color $color1;
  border-radius: 0 100% 100% 0 / 50%;
}

.b-11 {
  background-color $color1;
  border-radius: 0 0 100% 0;
}

.bd-1 {
  border-radius 50% / 100%;
}

.bd-2 {
  border-radius 10% / 50%;
}

.bd-3 {
  border-radius 10% 30% / 50%;
}

.bd-4 {
  border-radius 40% 40% 20% 20% / 100% 100% 50% 50%
}

.bd-5 {
  border-radius 100% 10% 10% 10%;
}

.bi-1 {
  font-size 14px;
  width 100%;
  text-align left;
  background-color $color1;
  background-clip padding-box;
  border-style solid;
  border-image url("img/border-bg1.png");
  border-width 22px;
  border-image-slice: 27;
}

.bi-2 {
  width 100%;
  font-size 14px;
  text-align left;
  background-color $color1;
  background-clip padding-box;
  border-style solid;
  border-image url("img/border-bg1.png") 33% / 27px / 27px repeat  stretch;
  border-width 27px;
}
.bi-3 {
  width 100%;
  font-size 14px;
  text-align left;
  background-color $color1;
  background-clip padding-box;
  border-style solid;
  border-image url("img/border-bg1.png");
  border-image-width: 27px;
  border-image-slice: 33%;
  border-image-outset: 27px;
  border-image-repeat: round;
}
