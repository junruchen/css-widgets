.btn {
  display inline-block;
  color $color-white;
  background-color $color-base;
  font-size 12px;
  padding 10px 18px;
  cursor pointer;
  b-box-sizing(border-box);
  white-space: nowrap;
  border none;
  &:hover {
    color $color-white;
    background-color $color-base-hover;
  }
}
.btn-lg {
  font-size 14px;
  padding 13px 24px;
}

.btn-sm {
  padding 6px 12px;
}

.btn-line {
  border 1px solid $color-base;
  background-color $color-white;
  color $color-base;
  &:hover {
    border-color transparent;
    background-color $color-base;
  }
}

.btn-forbidden {
  color $color-C5;
  background-color $color-F5;
  pointer-events: none;
}

.btn-img {
  font-size 14px;
  background-image url("img/btn-placeholder.png");
  background-repeat no-repeat;
  background-size 17px;
  background-position 24px center;
  padding 13px 24px 13px 47px;
}

.btn-img-line {
  @extend .btn-img;
  @extend .btn-line;
  background-image url("img/btn-placeholder2.png");
  &:hover {
    background-image url("img/btn-placeholder.png");
  }
}

.btn-text {
  background-color transparent;
  color $color-base;
  &:hover {
    color $color-base-hover;
    background-color transparent;
  }
}
