.btn {
  display inline-block;
  line-height 1;
  color $color-white;
  background-color $color-base;
  font-size 12px;
  padding 10px 18px;
  cursor pointer;
  white-space: nowrap;
  border none;
  &:hover {
    color $color-white;
    background-color $color-base-hover;
  }
  &::-moz-focus-inner {
    border: none;
    padding: 0;
  }

  &.btn-lg {
    font-size 14px;
    padding 13px 24px;
  }

  &.btn-sm {
    padding 6px 12px;
  }

  &.btn-hollow {
    b-box-shadow 0 0 0 1px $color-base;
    background-color $color-white;
    color $color-base;
    &:hover {
      color $color-white;
      b-box-shadow(0 0 0 1px transparent);
      background-color $color-base;
    }
  }

  &.btn-forbidden {
    color $color-C5;
    background-color $color-F5;
    pointer-events: none;
  }

  &.btn-icon {
    font-size 14px;
    padding 12px 24px;
    & i, & .btn-icon-i {
      vertical-align middle;
      display inline-block;
      width 16px;
      height 16px;
      background-image url("../css/widget/img/icon.png");
      background-repeat no-repeat;
      background-position 0 -40px;
    }
    & span, & .btn-icon-text {
      vertical-align middle;
      margin-left 6px;
    }
  }

  &.btn-hollow-icon {
    b-box-shadow 0 0 0 1px $color-base;
    background-color $color-white;
    color $color-base;
    font-size 14px;
    padding 12px 24px;
    & i, & .btn-icon-i {
      vertical-align middle;
      display inline-block;
      width 16px;
      height 16px;
      background-image url("../css/widget/img/icon.png");
      background-repeat no-repeat;
      background-position 0 -20px;
    }
    & span, & .btn-icon-text {
      vertical-align middle;
      margin-left 6px;
    }

    &:hover {
      & i, & .btn-icon-i {
        background-position 0 -40px;
      }
      color $color-white;
      b-box-shadow(0 0 0 1px transparent);
      background-color $color-base;
    }
  }
}

