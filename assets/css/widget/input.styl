input[placeholder] {
  color $color-C5;
}

input::-moz-placeholder {
  color $color-C5;
}

input:-ms-input-placeholder {
  color $color-C5;
}

input::-webkit-input-placeholder {
  color $color-C5;
}

.input-widgets .input-text{
  color $color-65;
}

.input-text {
  width 196px;
  height 32px;
  padding 0 12px;
  font-size 12px;
  font-weight 300;
  outline none;
  border 1px solid $color-E1;
  b-box-sizing(border-box);
  &:focus {
    border-color $color-base;
  }
}

.input-text-lg {
  width 240px;
  height 40px;
  padding 0 16px;
}

.input-text-sm {
  width 152px;
  height 24px;
  padding 0 8px;
}

.wrong-input {
  &:focus {
    border-color $color-orange;
  }
  & + span {
    color $color-orange;
    font-size 12px;
    padding-left 12px;
  }
}

.disable-input-text {
  pointer-events none;
  color $color-E5;
  background-color $color-FC;
  &:focus {
    border-color $color-E1;
  }
}