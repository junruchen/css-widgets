.dropdown {
  position relative;
  display inline-block;
  width 196px;
  height 32px;
  line-height 32px;
  & .dropdown-btn {
    position absolute;
    line-height 30px;
    z-index 2;
    width 100%;
    padding 0 16px;
    font-size 12px;
    border 1px solid $color-E1;
    background-color $color-white;
    b-box-sizing(border-box);
    & span {
      color $color-C5;
      vertical-align middle;
    }
    & i {
      position absolute;
      right 12px;
      top:50%;
      margin-top -2px;
      display inline-block;
      width 7px;
      height 4px;
      vertical-align middle;
      background-repeat no-repeat;
      background-image url("../css/widget/img/icon.png");
      background-position -15px 0;
    }
    & .active {
      color $color-65;
    }
  }
  & .dropdown-menu {
    display none;
    position absolute;
    z-index 1;
    top 32px;
    width 100%;
    padding 12px 0;
    b-box-shadow(0 0 16px 0 rgba(197, 197, 197, .5));
    & ul {
      & li {
        color $color-95;
        font-size 12px;
        padding 0 12px;
        cursor pointer;
        &:hover {
          color $color-base;
          background-color $color-F5;
        }
      }
      & .active {
        color $color-base;
        background-color $color-F5;
      }
    }
  }
  &.dropdown-lg {
    width 240px;
    height 40px;
    line-height 40px;
    & .dropdown-btn {
      line-height 38px;
      background-position 217px center;
      padding-left 16px;
      & i{
        right 16px;
      }
    }
    & .dropdown-menu {
      top 40px;
      & ul li {
        padding 0 16px;
      }
    }
  }

  &.dropdown-sm {
    width 152px;
    height 24px;
    line-height 24px;
    & .dropdown-btn {
      line-height 22px;
      background-position 137px center;
      & i{
        right 8px;
      }
    }
    & .dropdown-menu {
      top 24px;
    }
  }

  &.dropdown-open {
    & .dropdown-btn {
      & i {
        background-position -30px 0;
      }
      border-color $color-base;
    }
    & .dropdown-menu {
      display block;
    }
  }
}

